<%= div_for bus_stop do %>
	<li>
		<%= bus_stop.gml_id %>：<%= bus_stop.name %>
		（緯度：<%= bus_stop.latitude %>, 経度：<%= bus_stop.longitude %>）
	</li>
	<ol>
	  <% bus_stop.bus_route_informations.each do |info| %>
		  <li>
		  	<%= info.operation_company %>
		  	<%= info.line_name %>
		  	<%= info.bus_type_label %>
		  	停留所数<%= info.bus_stops.length %>
		  	平日<%= info.bus_route.weekday_rate == 0 ? "なし" : info.bus_route.weekday_rate %>
		  	土曜<%= info.bus_route.saturday_rate == 0 ? "なし" : info.bus_route.saturday_rate %>
		  	日祝<%= info.bus_route.holiday_rate == 0 ? "なし" : info.bus_route.holiday_rate %>
		  </li>
	  <% end %>
	</ol>
<% end %>
